{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./app/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@controllers/*": ["app/api/controllers/*"],
      "@entities/*": ["app/api/entities/*"],
      "@repositories/*": ["app/api/repositories/*"],
      "@services/*": ["app/api/services/*"],
      "@validators/*": ["app/api/validators/*"],
      "@middlewares/*": ["app/api/middlewares/*"],
      "@routes/*": ["app/api/routes/*"],
      "@utils/*": ["app/api/utils/*"],
      "@database/*": ["app/database/*"],
      "@config/*": ["app/config/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
