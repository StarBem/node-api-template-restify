{
  "name": "node-api-template-restify",
  "version": "1.0.2",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./ -o ./dist",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify app/index.ts",
    "start:prod": "ts-node -r tsconfig-paths/register ./dist/app/index.js",
    "test": "jest --env node",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typeorm": "node --require ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ormconfig.js",
    "migration:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "@sentry/integrations": "^6.14.1",
    "@sentry/node": "^6.14.1",
    "axios": "^0.24.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "js-essentials-functions": "^1.2.7",
    "jsonwebtoken": "^9.0.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "restify": "^8.6.0",
    "restify-errors": "^8.0.2",
    "typeorm": "^0.2.39",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/config": "^0.0.40",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^15.0.2",
    "@types/restify": "^8.5.4",
    "@types/restify-errors": "^4.3.4",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-commit-msg-linter": "^3.2.8",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-cli": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write .",
      "git add ."
    ]
  }
}
